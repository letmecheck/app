{
  "name": "letmecheck",
  "scripts": {
    "postdeploy": "bundle exec rake db:setup"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "pusher:sandbox",
    "sendgrid:starter"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
